<Window x:Class="AppsConsola.Ejercicio10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio10" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Center" Margin="0,25,0,0" TextWrapping="Wrap" Text="Suma de dígitos" VerticalAlignment="Top" Height="50" Width="252" FontSize="32" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED"/>

        <TextBlock Text="Ingresa un número:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Grid.ColumnSpan="2" Margin="17,123,399,0" FontSize="18"/>
        <TextBox x:Name="txtnumero" HorizontalAlignment="Left" Margin="204,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="33" FontSize="22"/>

        <Button x:Name="btnSumaDigitos" Content="Sumar dígitos:" HorizontalAlignment="Left" Margin="70,198,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="229" Click="btnSumaDigitos_Click" />

        <TextBlock x:Name="txtResultado" Grid.Column="0" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="17,249,0,69" Text="Resultado: " Foreground="#FFF9F2F2"/>
    </Grid>
</Window>
