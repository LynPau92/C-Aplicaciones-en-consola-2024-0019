<Window x:Class="AppsConsola.Ejercicio24"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio24" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="41,31,0,0" TextWrapping="Wrap" Text="Longitud, área y volumen de la circunferencia" VerticalAlignment="Top" Height="76" Width="417" FontSize="26" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" Grid.ColumnSpan="2" TextAlignment="Center"/>

        <TextBlock Text="Ingrese el radio de la circunferencia:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,144,39,0" FontSize="18"/>
        <TextBox x:Name="txtradio" HorizontalAlignment="Left" Margin="360,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Height="33" FontSize="22" Grid.ColumnSpan="2" />


        <Button x:Name="btnCalcular" Content="Calcular:" HorizontalAlignment="Left" Margin="29,217,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="411" Grid.ColumnSpan="2" Click="btnCalcular_Click"/>
        <TextBlock x:Name="txtResultado" Grid.Column="0" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="21,276,360,9" Text="Resultado: " Foreground="#FFF9F2F2" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
