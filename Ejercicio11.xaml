<Window x:Class="AppsConsola.Ejercicio11"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio11" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Factura" VerticalAlignment="Top" Height="61" Width="238" FontSize="32" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" TextAlignment="Center"/>

        <TextBlock Text="Ingrese el precio:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Grid.ColumnSpan="2" Margin="24,95,400,0" FontSize="18" Height="22"/>
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Margin="207,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="193" Height="31" FontSize="22" Grid.ColumnSpan="2"/>

        <TextBlock Text="Ingrese el número de artículos:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Grid.ColumnSpan="2" Margin="24,141,400,0" FontSize="18" Height="23"/>
        <TextBox x:Name="txtArticulos" HorizontalAlignment="Left" Margin="295,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" Height="32" FontSize="22" Grid.ColumnSpan="2"/>

        <Button x:Name="btnFactura" Content="Facturar:" HorizontalAlignment="Left" Margin="24,198,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="376" Grid.ColumnSpan="2" Click="btnFactura_Click" Height="32" />
        <TextBox Name="txtResultado" Width="376" Height="126" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,246,0,0" 
         IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
         TextWrapping="Wrap" VerticalContentAlignment="Top" Grid.ColumnSpan="2" FontSize="13" FontWeight="Bold" />
    </Grid>
</Window>
