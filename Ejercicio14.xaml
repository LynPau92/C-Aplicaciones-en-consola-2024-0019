<Window x:Class="AppsConsola.Ejercicio14"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio14" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" Text="Media de 100 números" VerticalAlignment="Top" Height="51" Width="364" FontSize="24" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" TextAlignment="Center"/>

        <TextBlock Text="Ingresa un número:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="41,121,173,0" FontSize="18"/>
        <TextBox x:Name="txtIngresarNumero" HorizontalAlignment="Left" Margin="216,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" FontSize="16"/>
        <Button x:Name="btnIngresarNumero" Content="Ingresar número" HorizontalAlignment="Left" Margin="216,165,0,0" VerticalAlignment="Top" Height="28" Width="122" Background="#FFF4F6FB" Foreground="#FF22249A" FontSize="16" Click="btnIngresar_Click" />

        <Button x:Name="btnResultado" Content="Mostrar resultado:" HorizontalAlignment="Center" Margin="0,258,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="1.41,0.602" Width="189" Click="btnResultado_Click"/>
        <TextBlock x:Name="txtResultado" Grid.Column="0" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="0,288,0,97" Text="Resultado: " Foreground="#FFF9F2F2"/>

        <TextBlock Name="contadorTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,218,0,0" FontWeight="Bold" FontSize="10" Foreground="#FFF9F2F2" TextAlignment="Center"  RenderTransformOrigin="0.698,6.339" Width="379" Height="53" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
