<Window x:Class="AppsConsola.Ejercicio30"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio30" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="23,10,0,0" TextWrapping="Wrap" Text="Ingreso a fiesta" VerticalAlignment="Top" Height="58" Width="426" FontSize="32" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" TextAlignment="Center" Grid.ColumnSpan="2"/>

        <TextBlock Text="Ingrese la 1ra clave:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,68,151,0" FontSize="18"/>
        <TextBox x:Name="txtC1" HorizontalAlignment="Left" Margin="220,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" Height="33" FontSize="22" Grid.ColumnSpan="2" />

        <TextBlock Text="Ingrese la 2da clave:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,116,151,0" FontSize="18"/>
        <TextBox x:Name="txtC2" HorizontalAlignment="Left" Margin="221,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" Height="33" FontSize="22" Grid.ColumnSpan="2" />

        <TextBlock Text="Ingrese la 3ra clave:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,163,151,0" FontSize="18"/>
        <TextBox x:Name="txtC3" HorizontalAlignment="Left" Margin="220,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" Height="33" FontSize="22" Grid.ColumnSpan="2" />

        <TextBlock Text="Ingrese la 4ta clave:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,208,151,0" FontSize="18"/>
        <TextBox x:Name="txtC4" HorizontalAlignment="Left" Margin="220,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" Height="33" FontSize="22" Grid.ColumnSpan="2" />

        <TextBlock Text="Ingrese la 5ta clave:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,254,151,0" FontSize="18"/>
        <TextBox x:Name="txtC5" HorizontalAlignment="Left" Margin="220,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" Height="33" FontSize="22" Grid.ColumnSpan="2" />

        <Button x:Name="btnIngreso" Content="Ingresar:" HorizontalAlignment="Left" Margin="30,306,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="419" Grid.ColumnSpan="2" Click="btnIngreso_Click" />
        <TextBlock x:Name="txtRespuesta" Grid.Column="0" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="30,357,344,22" Text="Respuesta: " Foreground="#FFF9F2F2" Grid.ColumnSpan="2"/>

    </Grid>
