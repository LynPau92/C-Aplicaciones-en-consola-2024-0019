<Window x:Class="AppsConsola.Ejercicio29"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio29" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="21,22,0,0" TextWrapping="Wrap" Text="Clasificación de estudiantes por deporte" VerticalAlignment="Top" Height="89" Width="407" FontSize="26" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" TextAlignment="Center" Grid.ColumnSpan="2"/>

        <TextBlock VerticalAlignment="Top" Foreground="#FFFBF6F6" Margin="29,111,372,0" Height="39" TextAlignment="Center" Grid.ColumnSpan="2" FontWeight="Bold"><Run Text="Los deportes a ingresar pueden ser: futbol, basquet, " FontSize="14"/><LineBreak/><Run Text="voley o ajedrez" FontSize="14"/></TextBlock>

        <TextBlock Text="Ingrese el deporte del alumno:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,168,121,0" FontSize="16"/>
        <TextBox x:Name="txtDeporte" HorizontalAlignment="Left" Margin="268,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="33" FontSize="22" Grid.ColumnSpan="2" />


        <Button x:Name="btnIngresar" Content="Ingresar:" HorizontalAlignment="Left" Margin="29,217,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="399" Grid.ColumnSpan="2" Click="btnIngresar_Click" />
        <TextBlock x:Name="txtResultado" Grid.Column="0" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="21,316,372,9" Text="Resultado: " Foreground="#FFF9F2F2" Grid.ColumnSpan="2"/>

        <TextBlock Name="contadorTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,257,0,0" FontWeight="Bold" Foreground="#FFF9F2F2" TextAlignment="Center"  RenderTransformOrigin="0.698,6.339" Width="407" Height="54" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
