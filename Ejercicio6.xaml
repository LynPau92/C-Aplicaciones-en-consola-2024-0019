<Window x:Class="AppsConsola.Ejercicio6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio6" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="41,31,0,0" TextWrapping="Wrap" Text="Suma de N números naturales" VerticalAlignment="Top" Height="92" Width="417" FontSize="32" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" Grid.ColumnSpan="2" TextAlignment="Center"/>

        <TextBlock Text="Ingrese el número N:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Grid.ColumnSpan="2" Margin="24,156,392,0" FontSize="18"/>
        <TextBox x:Name="txtNumero" HorizontalAlignment="Left" Margin="211,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="107" Height="33" FontSize="22"/>

        <Button x:Name="btnSuma" Content="Sumar números:" HorizontalAlignment="Left" Margin="24,217,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="384" Grid.ColumnSpan="2" Click="btnSuma_Click"/>
        <TextBox Name="txtResultado" Width="288" Height="118" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72,272,0,0" 
         IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
         TextWrapping="Wrap" VerticalContentAlignment="Top" />

    </Grid>
</Window>
