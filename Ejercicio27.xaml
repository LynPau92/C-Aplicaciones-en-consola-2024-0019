<Window x:Class="AppsConsola.Ejercicio27"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio27" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="29,30,0,0" TextWrapping="Wrap" Text="Egresos y sobrantes" VerticalAlignment="Top" Height="58" Width="361" FontSize="32" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" Grid.ColumnSpan="2" TextAlignment="Center"/>

        <TextBlock Text="Ingrese su egreso:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,121,151,0" FontSize="18"/>
        <TextBox x:Name="txtegreso" HorizontalAlignment="Left" Margin="220,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Height="33" FontSize="22" />


        <Button x:Name="btnCalcular" Content="Calcular:" HorizontalAlignment="Left" Margin="29,172,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="345" Click="btnCalcular_Click" />
        <TextBlock x:Name="txtResultado" Grid.Column="0" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="21,276,29,9" Text="Resultado: " Foreground="#FFF9F2F2"/>

        <TextBlock Name="contadorTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,217,0,0" FontWeight="Bold" Foreground="#FFF9F2F2" TextAlignment="Center"  RenderTransformOrigin="0.698,6.339" Width="364" Height="54"/>

    </Grid>
</Window>
