<Window x:Class="AppsConsola.Ejercicio17"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio17" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" Text="Parte fraccionaria o no" VerticalAlignment="Top" Height="51" Width="364" FontSize="24" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" TextAlignment="Center"/>

        <TextBlock Text="Ingresa un número:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="41,121,173,0" FontSize="18"/>
        <TextBox x:Name="txtIngresarNumero" HorizontalAlignment="Left" Margin="216,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" FontSize="16"/>

        <Button x:Name="btnResultado" Content="Verificar:" HorizontalAlignment="Center" Margin="0,187,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="1.41,0.602" Width="188" Click="btnResultado_Click"/>
        <TextBlock x:Name="txtResultado" Grid.Column="0" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="0,217,0,168" Text="Resultado: " Foreground="#FFF9F2F2"/>
    </Grid>
</Window>
