<Window x:Class="AppsConsola.Ejercicio21"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio21" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="41,31,0,0" TextWrapping="Wrap" Text="Cálculos de 2 números" VerticalAlignment="Top" Height="58" Width="417" FontSize="32" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" Grid.ColumnSpan="2" TextAlignment="Center"/>

        <TextBlock Text="Ingrese el 1er número:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,121,151,0" FontSize="18"/>
        <TextBox x:Name="txtNum1" HorizontalAlignment="Left" Margin="250,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Height="33" FontSize="22" />

        <TextBlock Text="Ingrese el 2do número:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,168,158,0" FontSize="18"/>
        <TextBox x:Name="txtNum2" HorizontalAlignment="Left" Margin="250,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Height="33" FontSize="22" />


        <Button x:Name="btnCalcular" Content="Calcular:" HorizontalAlignment="Left" Margin="29,212,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="301" Click="btnCalcular_Click" />
        <TextBlock x:Name="txtResultado" Grid.Column="0" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="21,276,29,9" Text="Resultado: " Foreground="#FFF9F2F2"/>

        <TextBlock Name="contadorTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,250,0,0" FontWeight="Bold" FontSize="10" Foreground="#FFF9F2F2" TextAlignment="Center"  RenderTransformOrigin="0.698,6.339" Width="363" Height="26"/>

    </Grid>
</Window>
