<Window x:Class="AppsConsola.Ejercicio19"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio19" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="29,10,0,0" TextWrapping="Wrap" Text="Cálculos de 2 números" VerticalAlignment="Top" Height="58" Width="355" FontSize="32" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" TextAlignment="Center" RenderTransformOrigin="0.405,0.052"/>

        <TextBlock Text="Ingrese el 1er número:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,75,151,0" FontSize="18"/>
        <TextBox x:Name="txtNum1" HorizontalAlignment="Left" Margin="250,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124" Height="33" FontSize="22" />

        <TextBlock Text="Ingrese el 2do número:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,122,158,0" FontSize="18"/>
        <TextBox x:Name="txtNum2" HorizontalAlignment="Left" Margin="250,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124" Height="33" FontSize="22" />


        <Button x:Name="btnCalcular" Content="Calcular:" HorizontalAlignment="Left" Margin="29,166,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="345" Click="btnCalcular_Click" />
        <TextBox Name="txtResultado" Width="345" Height="134" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="29,259,0,0" 
         IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
         TextWrapping="Wrap" VerticalContentAlignment="Top" />

        <TextBlock Name="contadorTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,217,0,0" FontWeight="Bold" FontSize="10" Foreground="#FFF9F2F2" TextAlignment="Center"  RenderTransformOrigin="0.698,6.339" Width="363" Height="26"/>

    </Grid>
</Window>
