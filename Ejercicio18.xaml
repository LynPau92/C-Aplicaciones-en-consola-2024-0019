<Window x:Class="AppsConsola.Ejercicio18"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio18" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" Text="Soluciones de la ecuacion cuadratica" VerticalAlignment="Top" Height="41" Width="364" FontSize="20" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" TextAlignment="Center"/>

        <TextBlock VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="0,77,410,0" FontSize="15" Grid.ColumnSpan="2" Height="62" TextAlignment="Center"><Run Text="Dada la ecuacion aX2 + bx + c = 0 ingresar"/><LineBreak/><Run Text=" los coeficientes a,b,c para calcular las posibles"/><LineBreak/><Run Text=" valores de X"/></TextBlock>

        <TextBlock Text="Ingresa el coeficiente a:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="20,158,154,0" FontSize="16"/>
        <TextBox x:Name="txtCoeficienteA" HorizontalAlignment="Left" Margin="237,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="21" FontSize="16"/>

        <TextBlock Text="Ingresa el coeficiente b:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="20,195,154,0" FontSize="16"/>
        <TextBox x:Name="txtCoeficienteB" HorizontalAlignment="Left" Margin="237,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="23" FontSize="16"/>

        <TextBlock Text="Ingresa el coeficiente c:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="20,233,154,0" FontSize="16"/>
        <TextBox x:Name="txtCoeficienteC" HorizontalAlignment="Left" Margin="237,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="21" FontSize="16"/>
        <Button x:Name="btnResultado" Content="Mostrar resultado:" HorizontalAlignment="Center" Margin="0,285,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="1.41,0.602" Width="188" Click="btnResultado_Click_1" />


        <TextBlock x:Name="txtResultado" Grid.Column="0" FontWeight="Bold" FontSize="11" TextAlignment="Center" Margin="0,329,0,10" Text="Resultado: " Foreground="#FFF9F2F2"/>
    </Grid>
</Window>
