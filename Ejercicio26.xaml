<Window x:Class="AppsConsola.Ejercicio26"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio26" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="151*"/>
            <RowDefinition Height="283*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="29,30,0,0" TextWrapping="Wrap" Text="Suma de los n primeros números enteros desde el número 8" VerticalAlignment="Top" Height="125" Width="361" FontSize="26" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" Grid.ColumnSpan="2" TextAlignment="Center" Grid.RowSpan="2"/>

        <TextBlock Text="Ingrese el numero enesimo:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,7,111,0" FontSize="18" Grid.Row="1"/>
        <TextBox x:Name="txtnumero" HorizontalAlignment="Left" Margin="273,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111" Height="33" FontSize="22" Grid.Row="1" />


        <Button x:Name="btnSumar" Content="Sumar:" HorizontalAlignment="Left" Margin="54,66,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="312" Grid.Row="1" Click="btnSumar_Click" />
        <TextBlock x:Name="txtResultado" Grid.Column="0" FontWeight="Bold" Margin="10,124,316,55" Foreground="#FFF9F2F2" Grid.Row="1" Grid.ColumnSpan="2"><Run Text="Resultado: "/><LineBreak/><Run/></TextBlock>

    </Grid>
</Window>
