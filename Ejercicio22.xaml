<Window x:Class="AppsConsola.Ejercicio22"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio22" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" Text="Calculadora del área de un triangulo" VerticalAlignment="Top" Height="80" Width="364" FontSize="26" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" TextAlignment="Center"/>

        <TextBlock Text="Ingresa el lado A:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="23,121,151,0" FontSize="16"/>
        <TextBox x:Name="txtladoA" HorizontalAlignment="Left" Margin="240,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="21" FontSize="16"/>

        <TextBlock Text="Ingresa el lado B:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="23,158,151,0" FontSize="16"/>
        <TextBox x:Name="txtladoB" HorizontalAlignment="Left" Margin="240,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="23" FontSize="16"/>

        <TextBlock Text="Ingresa el lado C:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="23,196,151,0" FontSize="16"/>
        <TextBox x:Name="txtladoC" HorizontalAlignment="Left" Margin="240,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="21" FontSize="16"/>

        <Button x:Name="btnResultado" Content="Calcular área:" HorizontalAlignment="Center" Margin="0,239,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="1.41,0.602" Width="188" Click="btnResultado_Click" />
        <TextBlock x:Name="txtResultado" Grid.Column="0" FontWeight="Bold" FontSize="11" TextAlignment="Center" Margin="0,279,0,10" Text="Resultado: " Foreground="#FFF9F2F2"/>
    </Grid>
</Window>
