<Window x:Class="AppsConsola.Ejercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio2" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="41,31,0,0" TextWrapping="Wrap" Text="Calculadora de descuento por sueldo" VerticalAlignment="Top" Height="92" Width="417" FontSize="32" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" Grid.ColumnSpan="2" TextAlignment="Center"/>

        <TextBlock Text="Ingrese el sueldo:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Grid.ColumnSpan="2" Margin="24,156,392,0" FontSize="18"/>
        <TextBox x:Name="txtSueldo" HorizontalAlignment="Left" Margin="211,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" Height="33" FontSize="22" Grid.ColumnSpan="2"/>

        <Button x:Name="btnDescuento" Content="Calcular descuento:" HorizontalAlignment="Left" Margin="24,217,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="441" Grid.ColumnSpan="2" Click="btnDescuento_Click"/>
        <TextBlock x:Name="txtResultado" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="17,268,335,129" Text="Resultado: " Foreground="#FFF9F2F2"/>

    </Grid>
</Window>
