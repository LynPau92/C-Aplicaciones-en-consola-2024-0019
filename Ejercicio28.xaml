<Window x:Class="AppsConsola.Ejercicio28"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio28" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="29,30,0,0" TextWrapping="Wrap" Text="Promedio de notas" VerticalAlignment="Top" Height="58" Width="361" FontSize="32" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" Grid.ColumnSpan="2" TextAlignment="Center"/>

        <TextBlock Text="Ingrese la 1ra nota:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,109,151,0" FontSize="18"/>
        <TextBox x:Name="txtNota1" HorizontalAlignment="Left" Margin="220,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Height="33" FontSize="22" />

        <TextBlock Text="Ingrese la 2da nota:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="29,153,151,0" FontSize="18"/>
        <TextBox x:Name="txtNota2" HorizontalAlignment="Left" Margin="220,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Height="33" FontSize="22" />

        <Button x:Name="btnPromedio" Content="Obtener promedio:" HorizontalAlignment="Left" Margin="29,217,0,0" VerticalAlignment="Top" FontSize="22" RenderTransformOrigin="1.41,0.602" Width="345" Click="btnPromedio_Click" />
        <TextBlock x:Name="txtResultado" Grid.Column="0" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="21,276,29,9" Text="Resultado: " Foreground="#FFF9F2F2"/>

    </Grid>
</Window>
