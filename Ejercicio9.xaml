<Window x:Class="AppsConsola.Ejercicio9"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsConsola"
        mc:Ignorable="d"
        Title="Ejercicio9" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/FONDO.png"/>
        </Grid.Background>

        <TextBlock HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" Text="Calculadora de notas de estudiantes" VerticalAlignment="Top" Height="67" Width="364" FontSize="24" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="#FFF7EDED" TextAlignment="Center"/>

        <TextBlock Text="Introduce la nota:" VerticalAlignment="Top" FontWeight="SemiBold" Foreground="#FFFBF6F6" Margin="42,117,43,0" FontSize="18"/>
        <TextBox x:Name="txtNota" HorizontalAlignment="Left" Margin="194,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28" FontSize="16"/>
        <Button x:Name="btnIngresar" Content="Ingresar nota" HorizontalAlignment="Left" Margin="192,167,0,0" VerticalAlignment="Top" Height="28" Width="122" Background="#FFF4F6FB" Foreground="#FF22249A" FontSize="16" Click="btnIngresar_Click" />

        <Button x:Name="btnResultado" Content="Mostrar resultado:" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="1.41,0.602" Width="188" Click="btnResultado_Click"/>
        <TextBox Name="txtResultado" Width="364" Height="137" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,261,0,0" 
         IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
         TextWrapping="Wrap" VerticalContentAlignment="Top" />
    </Grid>
</Window>
